<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/activity_general_margin"
    card_view:cardCornerRadius="@dimen/cardview_corner_radius">

    <LinearLayout
        android:layout_width="@dimen/cardview_profile_block"
        android:layout_height="@dimen/cardview_profile_block"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/cardview_profile_imageView_avatar"
            android:layout_width="@dimen/cardview_profile_block"
            android:layout_height="wrap_content"
            android:src="@drawable/dog_bark_icon" />

        <LinearLayout
            android:layout_width="@dimen/cardview_profile_block"
            android:layout_height="30dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/cardview_profile_textView_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cardview_textview_rate_icon_rate_value"
                android:textSize="@dimen/contact_fieldName" />

            <ImageView
                android:id="@+id/cardview_profile_imageView_bone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/bone_1_icon" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
